@model IEnumerable<QuanLyQuayThuoc.Models.StockIn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="card-body">
                            <a class="btn btn-success" style="margin-bottom:10px" href="/StockIns/Create"><i class="fa fa-plus"></i></a>
                            <table id="example1" class="table table-bordered table-striped" method="Get">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.stockin_id)</th>
                                        <th>@Html.DisplayNameFor(model => model.Distributor.dis_name)</th>
                                        <th>@Html.DisplayNameFor(model => model.date)</th>
                                        <th>@Html.DisplayNameFor(model => model.total)</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.stockin_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Distributor.dis_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.total)
                                            </td>
                                            <td>
                                                <a class='btn btn-default btn-sm' style='margin-left:5px' href="/StockinDetails/Details/@item.stockin_id"><i class='fa fa-edit'></i>Chi tiết</a>
                                                <a class="btn btn-success btn-sm" style="margin-left:5px" href="/StockinDetails/Create/@item.stockin_id"><i class="fa fa-plus"></i>Tạo mới</a>
                                                
                                                @*<a class='btn btn-danger btn-sm' style='margin-left:5px' href="/Brands/Delete/@item.stockin_id"><i class='fa fa-trash'></i>Xóa</a>*@
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>