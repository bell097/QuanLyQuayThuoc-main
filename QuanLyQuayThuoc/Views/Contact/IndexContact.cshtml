                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">

                                    @*<input type="submit" class="btn btn-primary btn-lg btn-block" id="btnSend" value="Gửi tin nhắn">*@
                                </div>
                            </div>
                            <button id="btnSend" class="btn btn-success">Gửi đi</button>
