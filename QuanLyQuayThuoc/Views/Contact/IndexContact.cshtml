@model QuanLyQuayThuoc.Models.Contact
@{
    ViewBag.Title = "IndexContact";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    #mapCanvas {
        height: 600px;
    }
</style>


@section footer{
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script src="https://maps.googleapis.com/maps/api/js"></script>


   
    <script>
        // This example displays a marker at the center of Australia.
        // When the user clicks the marker, an info window opens.
        function initMap() {
            //12.267755132913056, 109.16239963293809
            const uluru = { lat: 12.267755132913056, lng: 109.16239963293809 };
            const map = new google.maps.Map(document.getElementById("mapCanvas"), {
                zoom: 18,
                center: uluru,
            });
            const contentString = '@Html.Raw(Model.contact_content)';

            const infowindow = new google.maps.InfoWindow({
                content: contentString,
            });
            const marker = new google.maps.Marker({
                position: uluru,
                map,
                title: "Địa chỉ",
            });

            marker.addListener("click", () => {
                infowindow.open({
                    anchor: marker,
                    map,
                    shouldFocus: false,
                });
            });
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
     <script src="~/Assets/js/Controller/contactController.js"></script>
}
