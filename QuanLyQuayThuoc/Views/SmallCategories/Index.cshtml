@model IEnumerable<QuanLyQuayThuoc.Models.SmallCategory>


@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <a class="btn btn-success" onclick="confirmAction()" style="margin-bottom:10px" href="@Url.Action("Create","SmallCategories")"><i class="fa fa-plus"></i></a>
                        <table id="example1" class="table table-bordered table-striped" method="Get">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.smallcategory_name)</th>
                                    <th>Số lượng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.smallcategory_name)
                                    </td>
                                    @*<td>
            <a href="/Products/GetProductById/@item.category_id">@Html.DisplayFor(m => item.Products.Count)</a>
        </td>*@
                                    <td>
                                        @Html.DisplayFor(m => item.Products.Count)
                                    </td>
                                    <td>
                                        <a class='btn btn-default btn-sm' style='margin-left:5px' href="/SmallCategories/Edit/@item.smallcategory_id"><i class='fa fa-edit'></i> Sửa</a>
                                        @if (@item.Products.Count.Equals(0))
                                        {
                                <a class='btn btn-danger btn-sm' style='margin-left:5px' href="/SmallCategories/Delete/@item.smallcategory_id"><i class='fa fa-trash'></i> Xóa</a>}
                                    </td>

                                </tr>}
                            </tbody>
                            
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>